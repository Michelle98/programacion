#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;



void main()
{
	float K,I,N,P,O;
	cout<<"Ingrese el capital inicial: ";
	cin>> K;
	if (K>1000)
	{
	cout<<"Ingrese el interes: ";
	cin>> I;
	cout<<"Ingrese los dias: ";
	cin>> N;
	
	P = K*I*N/360;
	cout<<"El interes es: "<<P;
    }
	else 
	cout<<"Su prestamo no es mas de 1000" ,O;

	getch();

}
